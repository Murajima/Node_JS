html
    head
        title= title
        style
            include ../style.css
body
    h1 TODOLIST
    div
        table
            thead
                tr: th Todo
                    th Date
                    th Par
                    th
                    th
                    th
                    th
            tbody
                each val in content
                    tr
                        td= val.Message
                        td= " le " + val.createdAt
                        td= val.name
                        td
                            input(type='checkbox' checked=val.Completion==1)
                        td
                            form.form-inline(action='/todos/' + val.id + '?_method=PATCH', method="POST")
                                button.btn-primary(type="submit") Validate
                        td
                            form.form-inline(action='/todos/' + val.id + '?_method=DELETE', method="POST")
                                button.btn-primary(type="submit") Delete

    a(href="/add") I add a Todo
    a(href="/register") Register